<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.actions.act_window" id="action_plane_aeroport_tree">
		<field name="name">Aeroport</field>
		<field name="res_model">plane.aeroport</field>
	</record>

	<record model="ir.actions.act_window" id="action_plane_avio_tree">
		<field name="name">Avio</field>
		<field name="res_model">plane.avio</field>
	</record>

	<record model="ir.actions.act_window" id="action_plane_pilot_tree">
		<field name="name">Pilot</field>
		<field name="res_model">plane.pilot</field>
	</record>

	<record model="ir.actions.act_window" id="action_plane_vol_tree">
		<field name="name">Vol</field>
		<field name="res_model">plane.vol</field>
	</record>

	<menuitem name="Plane" id="plane_menu1" />
	<menuitem name="Aeroport" parent="plane_menu1" id="plane_aeroport1_1" action="action_plane_aeroport_tree" />	
	<menuitem name="Avio" parent="plane_menu1" id="plane_avio1_2" action="action_plane_avio_tree" />	
	<menuitem name="Pilot" parent="plane_menu1" id="plane_pilot1_3" action="action_plane_pilot_tree" />
	<menuitem name="Vol" parent="plane_menu1" id="plane_vol1_4" action="action_plane_vol_tree" />			

	<record model="ir.ui.view" id="view_plane_aeroport_tree">
		<field name="name">plane_aeroport</field> <!-- nom de la entitat + nom del modul -->
		<field name="model">plane.aeroport</field> <!-- nom de la entitat + nom del modul -->
		<field name="type">tree</field> <!-- no es toca -->
		<field name="arch" type="xml"> <!-- no es toca -->
			<tree string="Aeroport"> <!-- ficar tots els atributs de les entitats, lo que vols que es mostri dins del teu modul  -->
				<field name="codi"/>
				<field name="nom"/>
				<field name="imatge"/>
				<field name="ciutat"/>	
				<field name="pais"/>	
				<field name="latitud"/>	
				<field name="longitud"/>	
							
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_plane_avio_tree">
		<field name="name">plane_avio</field>
		<field name="model">plane.avio</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Avio">
				<field name="codi"/>
				<field name="imatge"/>
				<field name="marca"/>
				<field name="model"/>
				<field name="maxVal"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_plane_pilot_tree">
		<field name="name">plane_pilot</field>
		<field name="model">plane.pilot</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Pilot">
				<field name="codi"/>
				<field name="nom"/>
				<field name="Cognoms"/>				
				<field name="nif"/>	
				<field name="telf"/>
				<field name="email"/>							
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_plane_vol_tree">
		<field name="name">plane_vol</field>
		<field name="model">plane.vol</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Vol">
				<field name="codi"/>
				<field name="passatgers"/>
				<field name="dataSortida"/>				
				<field name="dataArrivada"/>						
			</tree>
		</field>
	</record>

	</data>
</odoo>
